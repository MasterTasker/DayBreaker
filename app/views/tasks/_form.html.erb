<div class="center">
<%= simple_form_for @task, url: submit_path, html: { class: 'form-horizontal' }, defaults: { input_html: {class: "input-xlarge" } } do |f| %>
  <%= f.input :name, required: true %>
  <%= f.input :completed_hours, required: true %>
  <%= f.input :estimated_hours, required: true %>
  <%= f.input :due_at, as: :string, required: true %>
  <br />
  <%= link_to "Back", root_path, class: "btn btn-primary" %><%= f.submit class: "btn btn-success" %>
<% end %>
</div>
