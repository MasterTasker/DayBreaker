<div class="constrain">
  <div class="row topRow">
    <!-- -->
    <div class="col-md-4 col-xs-4 topLogo"><center><a href="landing"><img class="img-responsive" src="assets/daybreaker_logo.png"></a></center></div>
    <div class="col-md-8 col-xs-8 topDash"><center><h1>Dashboard</h1></center></div>
  </div>
  <br/>

  <div class="row midRow">
    <div class="col-md-4 midLeft">
      <!-- <div class="row">
        <div class="col-xs-12 midLeftLogHours btn btn-primary">Log Hours</div>
      </div> -->
      <div class="row">
        <% @days.each.with_index do |day, number| %>

          <div class="col-md-12 <%= date_class(number)%>">
            <h3><%= present_date(number) %> <div class="totalHours"><%= day.values.sum %> hours</div></h3>
            <div class="list-group">

              <% day.each do |task, time| %>
                <%= link_to edit_task_path(task), class: "list-group-item" do %>
                  <%= task.name %><div class="totalHours"><%= time %> hrs</div>
                <% end %>
              <% end %>

            </div>
          </div>

        <% end %>
      </div>
    </div>

    <div class="col-md-8 midRight">
      <div class="row">
        <div class="col-md-12 midRightTask">
          <h2>Tasks<div class="addNew"><div class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add New</div></div></h2>
          <div id="tasks">

            <% current_user.incomplete_tasks.each do |task| %>
              <!-- Task -->
              <div id="task">
                <div class="taskInfo">
                  <h4><%= task.name %></h4> <small>DUE <%= task.due_at %> (<%= distance_of_time_in_words task.due_at.to_date, Date.current %> from now)</small>
                </div>
                <div class="progress">
                  <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="<%= task.completed_hours / task.estimated_hours %>">
                    <span class="sr-only"><%= task.completed_hours / task.estimated_hours %>% Complete</span>
                  </div>
                </div>
                <div class="taskInfo">
                  <p>
                  <span class="taskLeft"><%= task.completed_hours %> hours complete</span>   <span class="taskRight"><%= task.estimated_hours_left %> hours left</span></p>
                </div>
              </div>
              <!-- .task -->
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
  <br/>

  <div class="row botRow">

    <% if (past = request.params.fetch(:future, 0).to_i-1) >= 0 %>
      <%= link_to(
        'Go backward in time',
        params.merge(future: past),
        class: "col-xs-6 btn btn-primary"
      ) %>
    <% else %>
      <%= link_to(
        'Go backward in time',
        request.fullpath,
        class: "col-xs-6 btn btn-primary disabled"
      ) %>
    <% end %>

    <%= link_to(
      'Go forward in time',
      params.merge(future: request.params.fetch(:future, 0).to_i+1),
      class: "col-xs-6 btn btn-primary"
    ) %>

  </div>
  <br/>

</div>
